<h1><%= @restaurant.name %></h1>
<p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>
<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>

<h2>Reviews</h2>
<% if @restaurant.reviews.any? %>
  <ul class="list-group mb-3">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <strong>Rating:</strong> <%= review.rating %> <br>
        <%= review.content %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews yet.</p>
<% end %>

<h2>Add a Review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group">
    <%= f.input :content %>
    <%= f.input :rating, in: 0..5, step: 1 %>
  </div>
  <%= f.button :submit, "Add Review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-secondary" %>
